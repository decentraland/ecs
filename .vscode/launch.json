{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Jest",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
        "runtimeArgs": [
          "--async-stack-traces"
        ],
        "args": [
          "-i"
        ],
        "skipFiles": [
          "<node_internals>/**/*.js",
          "node_modules/**/*.js"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "protocol": "inspector",
        "autoAttachChildProcesses": true
      },
      {
        "type": "node",
        "name": "Debug tool flatbuffer",
        "request": "launch",
        "program": "${workspaceFolder}/tools/dist/flatbuffer-generation/index.js",
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal", 
        "args": ["test", "--component-path", "${workspaceFolder}/src/components/legacy/flatbuffer"],
        "preLaunchTask": "Build tools"
      }
    ]
  }